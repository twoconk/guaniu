<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/detail_image_music"
            android:layout_gravity="center_vertical"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/detail_title_music"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:id="@+id/detail_time_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/detail_text_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginLeft="105dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/play_music"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="01:25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="105dp"
        android:layout_width="245dp"
        android:layout_height="10dp"
        android:background="#bcbcbc"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="105dp"
        android:layout_width="match_parent"
        android:paddingBottom="7dp"
        android:layout_height="30dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/zan"/>
        <TextView
            android:id="@+id/detail_zan_music"
            android:layout_marginLeft="3dp"
            android:layout_width="50dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:focusable="false"
            android:layout_marginLeft="60dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/pinglun" />
        <TextView
            android:id="@+id/detail_pinglun_music"
            android:layout_width="30dp"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>